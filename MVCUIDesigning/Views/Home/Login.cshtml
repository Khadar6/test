
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm("Validate", "Home"))
        {
            @Html.Label("User Name:", new { @class = "label-primary" });
            <br />
            @Html.TextBox("txtName", "", new { placeholder = "Enter Name" });
            <br /> <br />
            @Html.Label("Password:", new { @class = "label-primary" });
            <br />
            @Html.Password("txtPwd", "", new { placeholder = "Enter Password" });
            <br /><br />
            <input type="submit" value="Login" class="btn-success" />
            <input type="reset" value="Reset" class="btn-primary" />
        }
    </div>
</body>
</html>
